@page
@model IndexModel
@{
    ViewData["Title"] = "Onur AKMESE - Portfolio";
}

<div class="container">
    <div class="hero-section text-center mb-5">
        <div class="hero-photo mb-4">
            <img src="~/images/me.jpg" alt="Onur AKMESE" class="rounded-circle" width="200" height="200">
        </div>
        <h1 class="display-4">Onur AKMESE</h1>
        <h2 class="text-muted">.NET Developer</h2>
        <p class="lead mt-3">Passionate about building robust and scalable web applications with .NET technologies</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h3 class="mb-4">Professional Experience</h3>
            
            @foreach (var experience in Model.Experiences)
            {
                <partial name="_ExperienceCard" model="experience" />
            }

            <h3 class="mb-4 mt-5">Entrepreneurship</h3>
            <partial name="_EntrepreneurshipCard" model="Model.Entrepreneurship" />

            <h3 class="mb-4 mt-5">Services Offered</h3>
            
            @foreach (var service in Model.Services)
            {
                <partial name="_ExperienceCard" model="service" />
            }
        </div>
    </div>
</div>
