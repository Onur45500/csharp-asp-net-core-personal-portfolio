@model GitHubProject

<div class="card mb-4 github-project-card">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start">
            <h5 class="card-title">@Model.Name</h5>
            <a href="@Model.HtmlUrl" target="_blank" class="text-muted project-link">
                <i class="fab fa-github"></i>
            </a>
        </div>
        <p class="card-text">@Model.Description</p>
        <div class="mt-3 d-flex justify-content-between align-items-center">
            <div>
                <span class="badge bg-primary me-2">@Model.Language</span>
                <small class="text-muted">
                    <i class="fas fa-star me-1"></i>@Model.StargazersCount
                    <i class="fas fa-code-branch ms-3 me-1"></i>@Model.ForksCount
                </small>
            </div>
            <small class="text-muted">
                Updated @Model.UpdatedAt.ToString("MMM dd, yyyy")
            </small>
        </div>
    </div>
</div>
