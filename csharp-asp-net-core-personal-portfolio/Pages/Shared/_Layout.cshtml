﻿﻿﻿﻿﻿﻿﻿﻿﻿﻿﻿﻿﻿﻿﻿﻿﻿﻿﻿<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - csharp_asp_net_core_personal_portfolio</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/csharp_asp_net_core_personal_portfolio.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" 
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" 
          crossorigin="anonymous" 
          referrerpolicy="no-referrer" />
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-page="/Index">
                    <i class="fas fa-code me-2"></i>Onur AKMESE
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link px-3 position-relative" href="#experience">
                                Experience
                                <span class="nav-link-underline"></span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 position-relative" href="#projects">
                                Projects
                                <span class="nav-link-underline"></span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 position-relative" href="#skills">
                                Skills
                                <span class="nav-link-underline"></span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 position-relative" href="#entrepreneurship">
                            Entrepreneurship
                            <span class="nav-link-underline"></span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 position-relative" href="#education">
                            Education
                            <span class="nav-link-underline"></span>
                            </a>
                        </li>
                        <li class="nav-item d-lg-none">
                            <a href="mailto:onur.akmese@hotmail.com" class="nav-link px-3">
                                <i class="fas fa-envelope me-2"></i>Email
                            </a>
                        </li>
                        <li class="nav-item d-lg-none">
                            <a href="https://www.linkedin.com/in/onur-akmese-48615219a/" target="_blank" class="nav-link px-3">
                                <i class="fab fa-linkedin me-2"></i>LinkedIn
                            </a>
                        </li>
                        <li class="nav-item d-lg-none">
                            <a href="https://github.com/Onur45500" target="_blank" class="nav-link px-3">
                                <i class="fab fa-github me-2"></i>GitHub
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="progress-container">
            <div class="progress-bar" id="scrollProgress"></div>
        </div>
    </header>
    <div class="main-wrapper pt-5">
        <div class="container">
            @RenderBody()
        </div>
    </div>

    <footer class="footer bg-light shadow-lg">
        <div class="container py-4">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-0">&copy; @DateTime.Now.Year - Onur AKMESE</p>
                    <p class="text-muted small mb-0">Full Stack .NET Developer</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <div class="social-links">
                        <a href="mailto:onur.akmese@hotmail.com" class="btn btn-link text-dark hover-scale" title="Email">
                            <i class="fas fa-envelope fa-lg"></i>
                        </a>
                        <a href="https://www.linkedin.com/in/onur-akmese-48615219a/" target="_blank" class="btn btn-link text-dark hover-scale" title="LinkedIn">
                            <i class="fab fa-linkedin fa-lg"></i>
                        </a>
                        <a href="https://github.com/Onur45500" target="_blank" class="btn btn-link text-dark hover-scale" title="GitHub">
                            <i class="fab fa-github fa-lg"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
